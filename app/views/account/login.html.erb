<%= stylesheet_link_tag "open_id.css" %>
<% form_tag do %>
  <table>
    <tr>
      <td>
        <p><label for="email"><%= t("Email") %></label><br/>
        <%= text_field_tag 'email' %></p>

        <p><label for="password"><%= t("Password") %></label><br/>
        <%= password_field_tag 'password' %></p>

        <p>
          <%= check_box_tag 'remember_me' %>
          <label for="remember_me"><%= t("Remember me") %></label>
        </p>
      </td>
      <% unless session[:openid_url] %>
        <td width="100">
          <p align="center"> OR </p>
        </td>
        <td valign="top">
          <p><label for="openid_identifier">OpenID:</label><br/>  
          <%= text_field_tag "openid_url", nil, :size => 30 %></p>
        </td>      
      <% end %>
    </tr>
  </table>
  <p><%= submit_tag t("Log In") %> <%= t("or") %> <%= link_to t("Create a new account"), signup_path %> </p>
<% end %>